<div class="jumbotron text-center">
    <h1 class="display-4">Burgers!</h1>
</div>


<div class="container">
    <div class="row">
        <div class="col">
            <h4>Waiting Area!</h4>
            <ul class="list-group">
                {{#each burgers}} {{#unless devoured}}
                <li class="list-group-item">{{burger_name}}
                    <button class="change-devour btn btn-success" data-id="{{id}}" data-devour="{{devoured}}">
                        Devour it!
                    </button>
                </li>
                {{/unless}} {{/each}}
            </ul>
        </div>
        <div class="col">
            <h4>Devoured Burgers!</h4>
            <ul class="list-group">
                {{#each burgers}} {{#if devoured}}
                <li class="list-group-item">{{burger_name}}</li>
                {{/if}} {{/each}}
            </ul>
        </div>
    </div>
    <hr>

    <h4>Add a Burger</h4>
    <form class="create-form">

        <div class="form-group">
            <label for="burger">Burger Name:</label>
            <input type="text" id="burger" name="name">
            <button type="submit" class="btn btn-primary">Add Burger</button>
        </div>

    </form>
</div>